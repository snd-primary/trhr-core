---
import { css } from "styled-system/css";

interface Props {
  title: string;
  desc: string;
  label?: string;
  className: string;
}

const { title, desc, label, className } = Astro.props;
---

<div
  class={`${css({
    border: "1px solid",
    borderColor: "gray.10",
    w: "full",
    h: "full",
    fontFamily: "depa",
    padding: 3,
    gap: 2,
    display: "grid",
    gridTemplateColumns: "1fr",
    gridTemplateRows: "subgrid",
    gridRow: "span 5",
  })} ${className}`}
>
  <h2
    class={css({
      fontSize: "2xl",
      color: "orange.12",
      fontWeight: "bold",
      display: "inline-block",
      width: "fit-content",
    })}
  >
    {title}
  </h2>
  <p>{desc}</p>
  <div
    class={css({
      w: "full",
      h: "full",
      marginX: "auto",
      display: "flex",
      justifyContent: "center",
    })}
  >
    <slot />
  </div>
  <span
    class={css({
      marginX: "auto",
      fontSize: "sm",
      paddingTop: 4,
      color: "gray.9",
    })}>[{label}]</span
  >
</div>
