---
import { css } from "styled-system/css";

const titleTextStyle = css({});
---

<header
  class={css({
    w: "full",
    h: "full",
    position: "sticky",
    top: 0,
    left: 0,
    display: "flex",
    alignItems: "center",
    justifyContent: "flex-start",
    background: "transparent",
    backdropFilter: "blur(12px)",
    borderBottom: "1px solid token(colors.border)",
    zIndex: "z50",
    marginTop: "1"
  })}
>
  <a href="/" class={css({ textDecoration: "none", color: "inherit" })}>
    <h1 class={titleTextStyle}>TRHR PORTFOLIO</h1>
  </a>
</header>
