---
import "../index.css";
import { css } from "../../styled-system/css";
import Header from "src/components/Header.astro";
import Footer from "src/components/Footer.astro";
import Head from "src/components/Head.astro";

const container = css({
  display: "grid",
  gridTemplateColumns: "1fr",
  gridTemplateRows: "60px 1fr 120px",
  alignItems: "flex-start",
  alignContent: "flex-start",
  justifyItems: "center",
  justifySelf: "center",
  position: "relative",
  minHeight: "100vh",
  height: "auto",
  maxWidth: "breakpoint-2xl",
  w: "full",
  md: {
    px: "12"
  }
});
---

<!doctype html>
<html lang="ja-JP">
  <Head />
  <body
    class={css({
      backgroundImage:
        "linear-gradient(45deg, oklch(0 0 0) 55% 12%, oklch(0 0 0 / 0.75))",
      color: "foreground",
      fontFamily: "global",
      lineHeight: "relaxed"
    })}
  >
    <div class={container}>
      <Header />
      <div
        class={css({
          w: "full",
          maxWidth: "full",
          h: "full"
        })}
      >
        <slot />
      </div>
      <Footer />
    </div>
  </body>
</html>
